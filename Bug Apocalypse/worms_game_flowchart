// Worms Game Flow
digraph {
	A [label="Start game"]
	B [label="Initialize Pygame, assets"]
	C [label="Start pause countdown thread"]
	D [label="while running"]
	E1 [label="If in menu state"]
	E2 [label="If in playing state"]
	F1 [label="curr_menu.handle()"]
	F2 [label="Update worms (physics)
Update projectiles
Update explosions
Check collisions
Check win/loss
switch_player() if needed"]
	G [label="If projectile fired or turn ended:
pause countdown"]
	H [label="Clear screen and draw all game objects
Map, Worms, Projectiles, Explosions
UI elements (timer, wind, health)
If in menu: draw menu overlay"]
	I [label="Update screen (flip)
tick(60) for framerate"]
	A -> B
	B -> C
	C -> D
	D -> E1 [constraint=true]
	D -> E2 [constraint=true]
	E1 -> F1
	E2 -> F2
	F2 -> G
	G -> H
	F1 -> H
	H -> I
	I -> D
}
